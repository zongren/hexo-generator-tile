<tile>
  <visual>
    <binding template="TileSmall">
      <image src="/images/small.jpg"/>
      <text hint-wrap="true">{{ post.title }}</text>
    </binding>
    <binding template="TileMedium">
      <image src="/images/medium.jpg"/>
      <text hint-wrap="true">{{ post.title }}</text>
    </binding>

    <binding template="TileWide">
      <image src="/images/wide.jpg"/>
      <text hint-style="subtitle" hint-wrap="true">{{ post.title }}</text>
      <text hint-style="captionSubtle" hint-wrap="true">
      {% if post.description %}
      {{ post.description }}
      {% elif post.excerpt %}
      {{ post.excerpt }}
      {% elif post.content %}
      {{ post.content.substring(0, 20) }}
      {% endif %}
      </text>
    </binding>

    <binding template="TileLarge">
      <image src="/images/large.jpg"/>
      <text hint-style="subtitle" hint-wrap="true">{{ post.title }}</text>
      <text hint-style="captionSubtle" hint-wrap="true">
      {% if post.description %}
      {{ post.description }}
      {% elif post.excerpt %}
      {{ post.excerpt }}
      {% elif post.content %}
      {{ post.content.substring(0, 20) }}
      {% endif %}
      </text>
    </binding>

  </visual>
</tile>